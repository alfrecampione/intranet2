  <body>
    <!-- Content -->

    <div class="authentication-wrapper authentication-cover authentication-bg">
    
      <!-- Toast with Animation -->
      <div class="bs-toast toast toast-ex animate__animated my-2 animate__slideInDown toast-ex1" role="alert" aria-live="assertive"
        aria-atomic="true" data-bs-delay="3000">
        <div class="toast-header">
          <i class="ti ti-bell ti-xs me-2"></i>
          <div class="me-auto fw-medium text-primary">GTI</div>
          <small class="text-warning">Create password</small>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body text-primary">You should receive an email, please check it.</div>
      </div>
      <!--/ Toast with Animation -->
    
      <!-- Toast wrong email -->
      <div class="bs-toast toast toast-ex animate__animated my-2 animate__slideInDown toast-ex2" role="alert" aria-live="assertive"
        aria-atomic="true" data-bs-delay="3000">
        <div class="toast-header">
          <i class="ti ti-bell ti-xs me-2"></i>
          <div class="me-auto fw-medium text-primary">GTI</div>
          <small class="text-warning">Wrong Email</small>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body text-primary">Please enter a valid email address</div>
      </div>
      <!--/ Toast wrong email -->
    
      <div class="authentication-inner row">
        <!-- /Left Text -->
        <div class="d-none d-lg-flex col-lg-7 p-0">
          <div class="auth-cover-bg auth-cover-bg-color d-flex justify-content-center align-items-center">
            <img src="/img/illustrations/login.png" alt="auth-login-cover" class="img-fluid my-5 auth-illustration"
              data-app-light-img="illustrations/login.png" data-app-dark-img="illustrations/login.png" />
          </div>
        </div>
        <!-- /Left Text -->
    
        <!-- Login -->
        <div class="d-flex col-12 col-lg-5 align-items-center p-sm-5 p-4">
          <div class="w-px-400 mx-auto">
            <!-- Logo -->
            <div class="app-brand mb-4">
              <img src="/img/branding/gti_logo.png" alt="" id="loginLogo">
            </div>
            <!-- /Logo -->
            <h4 class="mb-1">Register to <span class="text-primary">GoldenTrust's Intranet </span>ðŸ‘‹</h4>
            <p class="mb-4">Please create your credentials</p>
    
            <form id="formAuthentication" class="mb-3" action="/users/auth/reset-password/<%=encrypted%>" method="POST">
              <div class="mb-3 form-password-toggle">
                <label class="form-label" for="password">New Password</label>
                <div class="input-group input-group-merge">
                  <input
                    type="password"
                    id="password"
                    class="form-control"
                    name="password"
                    placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                    aria-describedby="password" />
                  <span class="input-group-text cursor-pointer"><i class="ti ti-eye-off"></i></span>
                </div>
              </div>
              <div class="mb-3 form-password-toggle">
                <label class="form-label" for="confirm-password">Confirm Password</label>
                <div class="input-group input-group-merge">
                  <input
                    type="password"
                    id="confirm-password"
                    class="form-control"
                    name="confirm-password"
                    placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                    aria-describedby="password" />
                  <span class="input-group-text cursor-pointer"><i class="ti ti-eye-off"></i></span>
                </div>
              </div>
              <button class="btn btn-primary d-grid w-100 mb-3">Set new password</button>
              <div class="text-center">
                <a href="/login">
                  <i class="ti ti-chevron-left scaleX-n1-rtl"></i>
                  Back to login
                </a>
              </div>
            </form>
          </div>
        </div>
        <!-- /Login -->
      </div>
    </div>

    <!-- / Content -->

