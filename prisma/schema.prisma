generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model session {
  sid    String   @id @db.VarChar
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)

  @@index([expire], map: "IDX_session_expire")
}

model PersonalInfo {
  id             Int @id @default(autoincrement())
  userId         Int   @unique
  ContractorType String
  LegalName      String
  PreferredName  String?
  LegalSex       String
  DateOfBirth    DateTime
  SSN            String
  PhotoPath      String?
}

model ContactInfo {
  id                       Int @id @default(autoincrement())
  userId                   Int   @unique
  personalEmail            String
  isPersonalEmailVisible   Boolean  @default(false)
  personalPhone            String?
  isPersonalPhoneVisible   Boolean  @default(false)
  country                  String
  address                  String
  city                     String
  state                    String
  zipCode                  String
  workEmail                String?
  workPhone                String?
  preferredContactMethod   String?
  sendMessagePersonalPhone Boolean  @default(false)
  createdAt                DateTime @default(now())
}

model EmergencyContact {
  id             String   @id @default(uuid())
  userId         Int
  Fullname       String
  Phone          String
  secondaryPhone String?
  createdAt      DateTime @default(now())
}

model TaxInfo {
  id                  String   @id @default(uuid())
  userId              Int   @unique
  nameOnTaxReturn     String
  bussinesName        String?
  taxClassification   String
  taxIdNumType        String?
  employerIdNum       String?
  llcClassification   String?
  otherClassification String?
  taxExempt           Boolean  @default(false)
  signatureTaxDoc     String?
  createdAt           DateTime @default(now())
}

model PaymentMethod {
  id              String   @id @default(uuid())
  userId          Int   
  bankAccountType String
  bankAccountNum  String
  bankRoutingNum  String
  accountNickname String
  createdAt       DateTime @default(now())
}

model Documents {
  id                            String   @id @default(uuid())
  userId                        Int   @unique
  directDepositForm             String
  driverLicense                 String
  EINconfirmation               String
  EmploymentAuthCardBack        String
  EmploymentAuthCardFront       String
  EmploymentAuthExtensionLetter String
  eANDo                         String
  GTDisciplinaryPolicy          String
  permanentResidentCard         String
  proLicense                    String
  socialSecurityCard            String
  USpassport                    String
  createdAt                     DateTime @default(now())
}